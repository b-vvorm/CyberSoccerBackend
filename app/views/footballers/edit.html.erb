<% form_for @footballer, :html => {:class => "default-form"} do |f| %>
  <div class="clear">
    <%= f.label :name, "", :class => "span-3" %>
    <%= f.text_field :name, :class => "prepend-1 span-5" %>
  </div>
  <div class="clear">
    <%= f.label :number, "", :class => "span-3" %>
    <%= f.text_field :number, :class => "prepend-1 span-5" %>
  </div>
  <div class="clear">
    <%= f.label :speed, "", :class => "span-3" %>
