<% errors_for :footballer, :header_message => "", :message => "" %>

<% form_for @footballer, :html => {:class => "default-form"} do |f| %>
  <div class="clear">
    <%= f.label :name, "", :class => "span-3" %>
    <%= f.text_field :name, :class => "prepend-1 span-5" %>
  </div>
  <div class="clear">
    <%= f.label :number, "", :class => "span-3" %>
    <%= f.text_field :number, :class => "prepend-1 span-5" %>
  </div>
  <div class="clear">
    <%= f.label :speed, "", :class => "span-3" %>
    <%= f.text_field :speed, :class => "prepend-1 span-5" %>
  </div>
  <div class="clear">
    <%= f.label :technicality, "", :class => "span-3" %>
    <%= f.text_field :technicality, :class => "prepend-1 span-5" %>
  </div>
  <div class="clear">
    <%= f.label :fight, "", :class => "span-3" %>
    <%= f.text_field :fight, :class => "prepend-1 span-5" %>
  </div>
  <div class="clear prepend-4">
      <div class="span-2">
          <%= link_to_function t("teams.save"), "$('.default-form').submit()", :class => "button span-2" %>
      </div>
      <div class="span-2">
          <%= link_to t("teams.cancel"), edit_team_url(@footballer.team_id), :class => "button span-2" %>
      </div>
  </div>
  <div class="clear"></div>
<% end %>

