  </div>
  <div class="clear">
    <%= f.label :technicality, "", :class => "span-3" %>
    <%= f.text_field :technicality, :class => "prepend-1 span-5" %>
  </div>
  <div class="clear">
    <%= f.label :fight, "", :class => "span-3" %>
    <%= f.text_field :fight, :class => "prepend-1 span-5" %>
  </div>
  <div class="clear prepend-4">
      <div class="span-2">
          <%= link_to_function t("teams.save"), "$('.default-form').submit()", :class => "button span-2" %>
      </div>
      <div class="span-2">
          <%= link_to t("teams.cancel"), edit_team_url(@footballer.team_id), :class => "button span-2" %>
      </div>
  </div>
  <div class="clear"></div>
<% end %>


