<% title(t("auth.sign_in")) %>
<%= error_messages_for :user_session, :header_message => "", :message => "" %>
<div class="prepend-7">
  <div class="span-10 default-container corner-all">
    <div class="header corner-top">
        <%= t("auth.sign_in") %>
    </div>
    <div class="content prepend-1">
        <% form_for @user_session, :url => auth_user_session_path, :html => {:class => "default-form"} do |f| %>
          <div class="clear prepend-3">
              <%= link_to t("auth.sign_in"), new_auth_account_url %>
          </div>
          <div class="clear">
              <%= f.label :email, "", {:class => "span-3"} %>
              <%= f.text_field :email, :class => "prepend-1 span-5" %>
          </div>
          <div class="clear">
              <%= f.label :password, "", {:class => "span-3"} %>
              <%= f.password_field :password, :class => "prepend-1 span-5" %>
          </div>
          <div class="clear prepend-6">
              <%= link_to_function t("auth.sign_in"), "$('.default-form').submit()", :class => "button span-2" %>
          </div>
          <div class="clear"></div>
        <% end %>
    </div>
  </div>
</div>

