<% form_for @game, :html => {:class => "default-form"} do |f| %>

  <%= f.label :first_team_id, "Select team", :class => "span-3" %>
  <%= f.select :first_team_id, @teams, {}, {:class => "span-3"} %>

  <div class="clear"></div>

  <%= f.label :game_half_length, "", :class => "span-3" %>
  <%= f.text_field :game_half_length, :class => "span-2" %>

  <div class="clear prepend-3">
      <div class="span-2">
          <%= link_to_function t("games.create"), "$('.default-form').submit()", :class => "button span-2" %>
      </div>
      <div class="span-2">
          <%= link_to t("games.cancel"), games_url, :class => "button span-2" %>
      </div>
  </div>
  <div class="clear"></div>
<% end %>

