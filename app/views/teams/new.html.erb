<% title t("teams.new") %>
<% errors_for :team, :header_message => "", :message => "" %>

<div class="clear"></div>
<h1><%= t("teams.new") %></h1>

<% form_for @team, :html => {:class => "default-form"} do |f| %>
  <%= render :partial => 'form', :object => f %>
  <div class="clear prepend-4">
      <div class="span-2">
          <%= link_to_function t("teams.create"), "$('.default-form').submit()", :class => "button span-2" %>
      </div>
      <div class="span-2">
          <%= link_to t("teams.cancel"), teams_url, :class => "button span-2" %>
      </div>
  </div>
  <div class="clear"></div>
<% end %>

